<!DOCTYPE html>
<html>
<head>
	<title>Student Portal</title>

	<!-- CSS bootrap only -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

	<!-- body font -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:ital,wght@1,600&display=swap" rel="stylesheet">

</head>
<style type="text/css">
/* body font */
body{
	font-family: 'Source Serif Pro', serif;
}
/*  top navigation css starts */
	header{
		background-color: #2a3554;
	}
	.navigation{
		height: 60px;
		color: white;
		text-align: center;
	}
	#pc-logo{
		width: 60px; 
		height: 60px;
	}
	.top-nav{
		margin-top: auto;
		margin-bottom: auto;
	}
	#chapter-name{
		width: 90%;
		height: auto;
	}
	.top-nav select{
		background-color: #2a3554;
		color: white;
	}
	.top-nav select option{
		background-color: #2a3554;
		color: white;
	}
/* top navigatin ends : all styles comleted */
/* vedio section css starts */
	.iframe-container{
		position: relative;
		width: 100%;
		padding-bottom: 56.25%; 
		height: 0;
		}
	.iframe-container iframe{
		position: absolute;
		top:0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	.video-disc{
		height: auto;
		padding-top: 5px;
		padding-bottom: 5px;
		padding-left: 5px;
		padding-right: 5px;
		color: white;
		background-color: rgb(7, 24, 124);
		border: 2px solid rgb(7, 24, 124);
	}
/* vedio section css ends : processing */

/*  vedio name list css begin */
	.v-list-box{
		margin-top: 20px;
	}
/*  vedio name list css ends : processing */
	
	/* notes css begins */
	.notes-list{
		margin-top: 20px;
	}
	.notes-link{
		text-decoration: none;
	}
	/* notes div css ends: processing */

	/* footer css starts */
	footer{
		height: 150px; 
		background-color: #1a1717;
		color: white;
		text-align: center;
	}
	footer .footer-text{
		margin-top: 40px;
	}
/* footer css ends */
</style>

<body>
	<!-- header starts -->
	<header>
		<div class="navigation">
			<div class="row">
				<div class="col-2 logo-div top-nav">
					<img id="pc-logo" src="pc-logo.png">
				</div>

				<div class="col-5 top-nav">
					<!-- <label for="chapters">Select Chapter :</label> -->
					
				</div>
				<div class="col-3 top-nav">Subject:<%= chapter.chapter_name %></div>
				<div class="col-2 top-nav"></div>
			</div>
		</div>
	</header>
	<!-- header ends : completed with all the designings -->
	<!-- spacing div starts -->
<!-- spacing div ends -->

	<!-- Lecture materials section starts -->
	<section class="l-materials">
		<!-- row begins -->
			<div class="row ">

				<!-- vedio col -->
				<div class="col-md-12 col-lg-9 vedio-div">
					<div id="carouselExampleControls" class="carousel slide" data-interval="false">
					  <div class="carousel-inner">
						<% chapter.videos.forEach((video) => { %>
							<div class="carousel-item active">
								<div class="iframe-container">
									<iframe src=<%= video.link %>  frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
								</div>	
								<div class="video-disc">
									<h5> Description:</h5>
									<p>
										This is a trial Description.
									</p>
								</div>					  
							</div>
						<% }); %> 
					  </div>
					  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
					    <span class="sr-only">Previous</span>
					  </a>
					  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					    <span class="carousel-control-next-icon" aria-hidden="true"></span>
					    <span class="sr-only">Next</span>
					  </a>
					</div>
				</div>
				<!-- vedio col -->

				<!-- vedio name list box start -->
				<div class="col-md-6 col-lg-3 vedio-list">
					<div class="v-list-box">
						<ol>
							<h5 class="l-box-title">Chapter Content :</h5>
							<hr>
						</ol>
					</div>
				</div>
				<!-- vedio name list box end -->

				<!--notes division starts -->
				<div class="col-md-6 col-lg-6 notes-list">
					<div class="notes-div">
						<ol>
							<h5>Notes :</h5>
							<hr>
							<% chapter.notes.forEach((note)=>{ %>
								<li><a class="notes-link" href="<%=note.link%>"><%=note.title%></a></li>
								Uploaded By: <%=note.faculty%> at <%=note.date%> <%}) %>
						</ol>
					</div>
				</div>
				<!-- notes division ends -->
			</div>
			<!-- end of row -->
	</section>
	<!-- lecture materials section ends : completed -->

	<!-- footer starts -->
	<footer>
		<div class="row">
			<div class="col-12 footer-text">
				<h5>I am Footer</h5>
				<p>@copyright</p>
			</div>
		</div>
	</footer>
<!-- footer ends : completed -->

	

</body>

