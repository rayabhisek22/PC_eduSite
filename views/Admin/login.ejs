<!-- font link -->
<!-- body font -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&display=swap" rel="stylesheet">
<!-- heading font -->
<link href="https://fonts.googleapis.com/css2?family=Ewert&display=swap" rel="stylesheet">
<style>
  body{
    background-image: linear-gradient(to right, #feca54 , #55efc4);
    font-family: 'Playfair Display', serif;
    margin-left: 30px;
    margin-top: 5vh;
    margin-bottom: 10vh;
  }
  input{
    font-family: 'Playfair Display', serif;
    
  }
  .form-class{
    background-image: linear-gradient( to right, #03ecfc, #565cd6);
    padding-top: 50px;
    padding-bottom: 50px;
    width: 30vw;
    display: flex;
    position: relative;
    margin-left: auto;
    margin-right: auto;
    border-radius: 10px;
  }
  
  .heading{
    font-family: 'Ewert', cursive;
    color: #ba13f2;
    text-align: center;
    margin-top: 40px;
    margin-bottom: 15px;
  }
  .login-form{
    margin-top: 50px;
    text-align: center;
    position: relative;
    margin-left: auto;
    margin-right: auto;
  }
  .login-form .form-label{
    font-size: 1.2em;
    color: white;
  }
  .login-form input{
    margin-bottom: 30px;
    width: auto;
    height: 40px;
    border-radius: 5px;
  }
  .login-form .submit-btn{
    color: white;
    background: #18db22;
    margin-top: -30px;
    width: 70px;
    height: 35px;
    margin-left: 93px;
  }.login-form .submit-btn:hover{
    font-size: 1.05em;
  }


</style>

<h1 class="heading">Admin Login Portal </h1>
<div class="form-class">
  <form class="login-form" method = "POST" action="/admin/login">
    <label class="form-label" for="fname">Admin Username:</label><br>
    <input type="text" id="fname" name="username"><br>
    <label class="form-label" for="lname">Admin Password</label><br>
    <input type="password" id="lname" name="password"><br><br>
    <input class="submit-btn" type="submit" value="Submit">
  </form> 
</div>
